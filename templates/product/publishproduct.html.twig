{% extends 'base.html.twig' %}

{% block Content %}


    <div class="cart-table-area section-padding-100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-lg-8">
                    <div class="checkout_details_area clearfix">

                            {{form_start(form)}}
                            <div class="my-custom-class-for-errors">
                                {{ form_errors(form) }}
                            </div>
                            <div class="cart-title">
                                <h2>Déposer une annonce</h2>
                            </div>
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <h4> Titre de l'annonce : * </h4>
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_widget(form.name) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    <h4>Prix : </h4>
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_widget(form.price) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    <h4> Description de l'annonce : *</h4>
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_widget(form.description) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    <h4> état du produit : *</h4>
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_widget(form.state) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    <h4> Catégories du produit : *</h4>
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_widget(form.category) }}
                                </div>

                                {{ form_label(form.productImages) }}
                                {{ form_errors(form.productImages) }}

                                <ul>
                                    {% for emailField in form.productImages %}
                                        <li>
                                            {{ form_errors(emailField) }}
                                            {{ form_widget(emailField.filename) }}
                                        </li>
                                    {% endfor %}
                                </ul>

                                <div class="col-md-12 mb-3">
                                    <h4> Images de l'annonce : *</h4>
                                </div>

                                <div class="col-md-12 mb-3">
                                    {{ form_widget(form.productImages) }}
                                </div>



                                <div class="col-md-12 mb-3">
                                    <p>Champs obligatoires *</p>
                                </div>

                            </div>
                            {{form_rest(form)}}
                            {{ form_end(form) }}
                      </div>
                </div>
                <!--<div class="col-12 col-lg-4">
                    <div class="cart-summary">

                        <div class="cart-btn mt-10">
                            <button form="form-id" type="submit" class="btn amado-btn w-100">Valider</button>
                        </div>
                    </div>
                </div>-->
            </div>
        </div>
    </div>

    </div>


{% endblock %}